<div class="modal" id="manuscript-modal-<%= column %>" tabindex="-1" aria-hidden="true">
	<%= form_with(model: manuscript, url: manuscript_path(manuscript)) do |form| %>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Change bibliography publication location</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<label class="mt-3 fw-bolder">Institution</label>
				<%= form.collection_select column.to_sym, Institution.all, :id, :display_name, {include_blank: true}, {class: "form-control", placeholder: "Select institution"} %>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-action" onclick="saveModal('manuscript', '<%= column %>')">Save & Close</button>
			</div>
		</div>
	</div>
	<% end %>	
</div>

<script type="text/javascript">
	$(function() {
		new TomSelect("#manuscript-modal-<%= column %> #manuscript_<%= column %>", ts_sort_text_asc_max_1);;
	})
</script>
