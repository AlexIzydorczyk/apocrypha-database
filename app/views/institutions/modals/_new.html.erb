<div class="modal fade" id="new-institution-modal" tabindex="-1" aria-hidden="true">
	<%= form_with(model: institution) do |form| %>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Add instiution</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<label class="fw-bolder">Institution name</label>
				<div class="row">
					<div class="form-group col-md-5 mb-2">
						<%= form.collection_select :language_id, Language.all, :id, :language_name, {include_blank: true}, {class: "form-control", placeholder: "Search language"} %>
					</div>
					<div class="form-group col-md-7 mb-2">
						<%= form.text_field :name_orig, class: "form-control", placeholder: "Name in original language" %>
					</div>
					<div class="form-group col-md-5 mb-2">
						<input type="text" disabled value="English" class="form-control">
					</div>
					<div class="form-group col-md-7 mb-2">
						<%= form.text_field :name_english, class: "form-control", placeholder: "Name in English" %>
					</div>
				</div>
				<label class="mt-3 fw-bolder">Location</label>
				<div class="row">
					<div class="form-group col-md-12 mb-2">
						<%= form.collection_select :location_id, Location.all, :id, :city_region_country, {include_blank: true}, {class: "form-control", placeholder: "Search location"} %>
					</div>
				</div>
			</div>
			<% if parent.class == Manuscript %>
				<%= hidden_field_tag :manuscript_id, parent.id %>
			<% else %>
				<%= hidden_field_tag :booklet_id, parent.id %>
			<% end %>
			<div class="modal-footer">
				<%= form.submit "Save & Close", class: "btn btn-action", onclick: "timeoutReload()" %>
			</div>
		</div>
	</div>
	<% end %>	
</div>

<script type="text/javascript">
	new TomSelect("#institution_language_id",{
		sortField: {
			field: "text",
			direction: "asc"
		},
		maxItems: 1,
	});
</script>
