<!DOCTYPE html>
<html>
  <head>
    <%= render '/layouts/head' %>
  </head>

  <body>
    
    <%= yield %>

    <script type="text/javascript">
      <% if notice.present? %>
        window.SnackBar({message: "<%= notice %>"})
      <% end %>
      <% if alert.present? %>
        window.SnackBar({message: "<%= alert %>", status: 'error'})
      <% end %>
      $(".js-snackbar:has(> .js-snackbar--danger)").addClass('danger');
    </script>

  </body>
</html>
