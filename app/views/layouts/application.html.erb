<!DOCTYPE html>
<html>
  <head>
    <%= render '/layouts/head' %>
  </head>

  <body class="d-flex">
    <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark position-fixed" style="width: 300px; min-height: 100vh; height: 100%;">
      <p>Main Menu</p>
      <hr>
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a href="/manuscripts" class="nav-link text-white">Manuscripts</a>
        </li>
        <li class="nav-item">
          <a href="/booklets" class="nav-link text-white">Booklets</a>
        </li>
        <li class="nav-item">
          <a href="/texts" class="nav-link text-white">Texts</a>
        </li>
        <li class="nav-item">
          <a href="/apocrypha" class="nav-link text-white">Apocrypha</a>
        </li>
        <li class="nav-item">
          <a href="/sections" class="nav-link text-white">Sections</a>
        </li>
      </ul>
    </div>
    <main class="container" style="margin-left: 330px">
      <%= yield %>

      <script type="text/javascript">
        <% if notice.present? %>
          window.SnackBar({message: "<%= notice %>"})
        <% end %>
        <% if alert.present? %>
          window.SnackBar({message: "<%= alert %>", status: 'error'})
        <% end %>
        $(".js-snackbar:has(> .js-snackbar--danger)").addClass('danger');
      </script>
    </main>

  </body>
</html>
