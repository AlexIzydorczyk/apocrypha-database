<div class="row">
  <div class="filterable">
    <div class="panel-heading text-end">
      <button class="btn btn-outline-secondary btn-sm btn-filter"><i class="far fa-filter"></i> Filter</button>
    </div>
    <table class="table table-striped">
      <thead>
        <tr class="filters">
          <% unless hide_columns.include? 'id' %><th class="col"><input type="text" class="form-control" placeholder="Id" disabled></th><% end %>
                      <% unless hide_columns.include? 'modern_source_id' %><th class="col"><input type="text" class="form-control" placeholder="Modern source" disabled></th><% end %>
                      <% unless hide_columns.include? 'url' %><th class="col"><input type="text" class="form-control" placeholder="Url" disabled></th><% end %>
                    <% unless hide_buttons.count == 2 %><th class="col-3">Actions</th><% end %>
        </tr>
      </thead>
      <tbody>
        <% source_urls.each do |source_url| %>
      	<tr>
          <% unless hide_columns.include? 'id' %><td class="col"><%= source_url.id %></td><% end -%>
                      <% unless hide_columns.include? 'modern_source_id' %><td class="col"><%= source_url.modern_source_id %></td><% end %>
                      <% unless hide_columns.include? 'url' %><td class="col"><%= source_url.url %></td><% end %>
                  	<td class="col-3">
        		<% unless hide_buttons.include? 'open' %><%= link_to "Open", source_url, class: "btn btn-outline-primary me-2" %><% end %>
        		<% unless hide_buttons.include? 'edit' %><%= link_to "Edit", edit_source_url_path(source_url), class: "btn btn-outline-primary me-2" %><% end %>
        	</td>
        </tr>
        <% end %>
      </tbody>
      <caption>No.of Rows : <span id="rowcount"></span></caption>
    </table>
  </div>
</div>
