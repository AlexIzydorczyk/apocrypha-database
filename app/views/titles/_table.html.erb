<div class="row">
  <div class="filterable">
    <div class="panel-heading text-end">
      <button class="btn btn-outline-secondary btn-sm btn-filter"><i class="far fa-filter"></i> Filter</button>
    </div>
    <table class="table table-striped">
      <thead>
        <tr class="filters">
          <% unless hide_columns.include? 'id' %><th class="col"><input type="text" class="form-control" placeholder="Id" disabled></th><% end %>
                      <% unless hide_columns.include? 'apocryphon_id' %><th class="col"><input type="text" class="form-control" placeholder="Apocryphon" disabled></th><% end %>
                      <% unless hide_columns.include? 'title_orig' %><th class="col"><input type="text" class="form-control" placeholder="Title orig" disabled></th><% end %>
                      <% unless hide_columns.include? 'title_orig_transliteration' %><th class="col"><input type="text" class="form-control" placeholder="Title orig transliteration" disabled></th><% end %>
                      <% unless hide_columns.include? 'title_translation' %><th class="col"><input type="text" class="form-control" placeholder="Title translation" disabled></th><% end %>
                      <% unless hide_columns.include? 'language_id' %><th class="col"><input type="text" class="form-control" placeholder="Language" disabled></th><% end %>
                    <% unless hide_buttons.count == 2 %><th class="col-3">Actions</th><% end %>
        </tr>
      </thead>
      <tbody>
        <% titles.each do |title| %>
      	<tr>
          <% unless hide_columns.include? 'id' %><td class="col"><%= title.id %></td><% end -%>
                      <% unless hide_columns.include? 'apocryphon_id' %><td class="col"><%= title.apocryphon_id %></td><% end %>
                      <% unless hide_columns.include? 'title_orig' %><td class="col"><%= title.title_orig %></td><% end %>
                      <% unless hide_columns.include? 'title_orig_transliteration' %><td class="col"><%= title.title_orig_transliteration %></td><% end %>
                      <% unless hide_columns.include? 'title_translation' %><td class="col"><%= title.title_translation %></td><% end %>
                      <% unless hide_columns.include? 'language_id' %><td class="col"><%= title.language_id %></td><% end %>
                  	<td class="col-3">
        		<% unless hide_buttons.include? 'open' %><%= link_to "Open", title, class: "btn btn-outline-primary me-2" %><% end %>
        		<% unless hide_buttons.include? 'edit' %><%= link_to "Edit", edit_title_path(title), class: "btn btn-outline-primary me-2" %><% end %>
        	</td>
        </tr>
        <% end %>
      </tbody>
      <caption>No.of Rows : <span id="rowcount"></span></caption>
    </table>
  </div>
</div>
