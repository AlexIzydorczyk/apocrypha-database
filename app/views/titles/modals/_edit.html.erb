<div class="modal" id="edit-<%= pid %>-title-modal" tabindex="-1" aria-hidden="true">
	<%= form_with(model: title, url: title_path(title)) do |form| %>
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Edit Title</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<%= form.label "Title", class: "fw-bolder mt-2" %>
				<%= form.text_field :title_orig, class: "form-control" %>
				<div class="form-check mt-2">
					<%= form.check_box :italicized, class: 'form-check-input' %>
					<%= form.label "Italicized?", class: "form-check-label" %>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-action" onclick="saveForm($(this).closest('form'), null, function(){timeoutReload(null, 0);})">Save & Close</button>
			</div>
		</div>
	</div>
	<% end %>	
</div>