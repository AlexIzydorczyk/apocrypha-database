		  <label class="form-check-label" for="non-apocryphal">
		    Non-apocryphal
		  </label>
		</div>
	</div>
</div>
<%= button_to 'New Apocryphon', apocrypha_path, class: "btn btn-action d-none", id: 'new_apocryphon_form', params: { apocryphon: { apocryphon_no: "" } } %>

