<p style="color: green"><%= notice %></p>

<h1>Sections</h1>

<div id="sections">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Text ID</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @sections.each do |section| %>
        <tr>
          <%= render section %>
          <td class="actions">
            <%= link_to "Show this section", section, class: 'btn btn-primary me-2'%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New section", new_section_path %>
