<div class="container-fluid text-center" id="header" style="height: inherit; padding-top: 120px;">
  <div class="row">
    <div class="col">
      <%= image_tag("Apocrypharius-A.png", height: 150, alt: "Apocrypharius letter A" ) %>
      <h2 class="title">site for research on manuscripts of<br>Christian apocrypha and parabiblica</h2>
    </div>
  </div>
</div>
<div class="row mt-4" id="login">
  <div class="col-md-4 offset-md-4 text-center">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group my-3">
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'Email' %>
      </div>

      <div class="form-group my-3">
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: 'Password' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group form-check text-start">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label' do %>
            <%= resource.class.human_attribute_name('remember_me') %>
          <% end %>
        </div>
      <% end %>

      <div class="form-group my-2">
        <%= f.submit  "Sign in", class: 'btn btn-lg btn-action', style: 'min-width: 300px' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>

<script type="text/javascript">
  $('body').css('background-image', 'url("<%= image_url('login-bg2.png') %>")').css('background-position', 'center').css('background-size', 'cover');;
  $('nav').css('background', 'none');
</script>