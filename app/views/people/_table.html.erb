<div class="row">
  <div class="filterable">
    <div class="panel-heading text-end">
      <button class="btn btn-outline-secondary btn-sm btn-filter"><i class="far fa-filter"></i> Filter</button>
    </div>
    <table class="table table-striped">
      <thead>
        <tr class="filters">
          <% unless hide_columns.include? 'id' %><th class="col"><input type="text" class="form-control" placeholder="Id" disabled></th><% end %>
                      <% unless hide_columns.include? 'first_name' %><th class="col"><input type="text" class="form-control" placeholder="First name" disabled></th><% end %>
                      <% unless hide_columns.include? 'middle_name' %><th class="col"><input type="text" class="form-control" placeholder="Middle name" disabled></th><% end %>
                      <% unless hide_columns.include? 'last_name' %><th class="col"><input type="text" class="form-control" placeholder="Last name" disabled></th><% end %>
                      <% unless hide_columns.include? 'name_english' %><th class="col"><input type="text" class="form-control" placeholder="Name english" disabled></th><% end %>
                      <% unless hide_columns.include? 'name_vernacular' %><th class="col"><input type="text" class="form-control" placeholder="Name vernacular" disabled></th><% end %>
                      <% unless hide_columns.include? 'name_vernacular_transliteration' %><th class="col"><input type="text" class="form-control" placeholder="Name vernacular transliteration" disabled></th><% end %>
                      <% unless hide_columns.include? 'latin_name' %><th class="col"><input type="text" class="form-control" placeholder="Latin name" disabled></th><% end %>
                      <% unless hide_columns.include? 'birth_date' %><th class="col"><input type="text" class="form-control" placeholder="Birth date" disabled></th><% end %>
                      <% unless hide_columns.include? 'death_date' %><th class="col"><input type="text" class="form-control" placeholder="Death date" disabled></th><% end %>
                      <% unless hide_columns.include? 'character' %><th class="col"><input type="text" class="form-control" placeholder="Character" disabled></th><% end %>
                      <% unless hide_columns.include? 'viaf' %><th class="col"><input type="text" class="form-control" placeholder="Viaf" disabled></th><% end %>
                    <% unless hide_buttons.count == 2 %><th class="col-3">Actions</th><% end %>
        </tr>
      </thead>
      <tbody>
        <% people.each do |person| %>
      	<tr>
          <% unless hide_columns.include? 'id' %><td class="col"><%= person.id %></td><% end -%>
                      <% unless hide_columns.include? 'first_name' %><td class="col"><%= person.first_name %></td><% end %>
                      <% unless hide_columns.include? 'middle_name' %><td class="col"><%= person.middle_name %></td><% end %>
                      <% unless hide_columns.include? 'last_name' %><td class="col"><%= person.last_name %></td><% end %>
                      <% unless hide_columns.include? 'name_english' %><td class="col"><%= person.name_english %></td><% end %>
                      <% unless hide_columns.include? 'name_vernacular' %><td class="col"><%= person.name_vernacular %></td><% end %>
                      <% unless hide_columns.include? 'name_vernacular_transliteration' %><td class="col"><%= person.name_vernacular_transliteration %></td><% end %>
                      <% unless hide_columns.include? 'latin_name' %><td class="col"><%= person.latin_name %></td><% end %>
                      <% unless hide_columns.include? 'birth_date' %><td class="col"><%= person.birth_date %></td><% end %>
                      <% unless hide_columns.include? 'death_date' %><td class="col"><%= person.death_date %></td><% end %>
                      <% unless hide_columns.include? 'character' %><td class="col"><%= person.character %></td><% end %>
                      <% unless hide_columns.include? 'viaf' %><td class="col"><%= person.viaf %></td><% end %>
                  	<td class="col-3">
        		<% unless hide_buttons.include? 'open' %><%= link_to "Open", person, class: "btn btn-outline-primary me-2" %><% end %>
        		<% unless hide_buttons.include? 'edit' %><%= link_to "Edit", edit_person_path(person), class: "btn btn-outline-primary me-2" %><% end %>
        	</td>
        </tr>
        <% end %>
      </tbody>
      <caption>No.of Rows : <span id="rowcount"></span></caption>
    </table>
  </div>
</div>
