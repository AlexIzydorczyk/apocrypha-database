<div id="contents-list">
	<% parent.contents.each_with_index do |c, i| %>
		<div class="card grey mb-2" id="<%= dom_id c %>">
			<div class="card-body d-flex align-items-center">
				<i class="fas fa-bars me-2 grab"></i>
				<span class="index me-4"><%= i+1 %></span>
				<span class="me-auto"><%= c.display_name %></span>
				<% if c.has_details %>
					<%= link_to "Open", parent.class == Manuscript ? edit_manuscript_content_path(parent, c) : edit_manuscript_booklet_content_path(parent.manuscript, parent, c), class: "btn btn-outline-action" %>
				<% end %>
				<div class="dropdown">
				  <button class="btn btn-outline-action ms-2" type="button" id="content-options-<%= c.id %>" data-bs-toggle="dropdown" aria-expanded="false">
				  	<i class="far fa-ellipsis-h"></i>
				  </button>
				  <ul class="dropdown-menu" aria-labelledby="content-options-<%= c.id %>">
				    <% if parent.class == Manuscript %><li><button type="button" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#move-content-<%= c.id %>">Move to booklet</button></li><% end %>
				    <% unless c.has_details %>
				    	<li><%= link_to "Add details", parent.class == Manuscript ? edit_manuscript_content_path(parent, c) : edit_manuscript_booklet_content_path(parent.manuscript, parent, c), class: "dropdown-item" %></li>
				    <% end %>
				  </ul>
				</div>
			</div>
		</div>
	<% end %>
</div>
