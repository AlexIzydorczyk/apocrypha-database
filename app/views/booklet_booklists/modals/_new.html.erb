<div class="modal" id="add-booklet-booklist-modal" tabindex="-1" aria-hidden="true" data-depth="<%= depth %>">
	<%= form_with(model: booklet_booklist) do |form| %>
	<% if parent.class == Booklet %>
		<input type="hidden" name="booklet_booklist[booklet_id]" value="<%= parent.id %>">
	<% else %>
		<input type="hidden" name="booklet_booklist[booklist_id]" value="<%= parent.id %>">
	<% end %>
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Add <%= parent.class == Booklet ? "booklist" : "booklet" %></h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="row">
					<div class="col-md-12">
						<label><%= parent.class == Booklet ? "Booklist" : "Booklet" %> name</label>
						<select class="form-control" name="booklet_booklist[<%= parent.class == Booklet ? "booklist" : "booklet" %>_id]" id="booklet_booklist_<%= parent.class == Booklet ? "booklist" : "booklet" %>_id" placeholder="Select a <%= parent.class == Booklet ? "booklist" : "booklet" %>">
								<option></option>
								<% if parent.class == Booklet %>
									<% Booklist.all.each do |b| %>
										<option value="<%= b.id %>"><%= b.display_name %></option>
									<% end %>
								<% else %>
									<% Booklet.all.each do |b| %>
										<option value="<%= b.id %>"><%= b.display_name %></option>
									<% end %>
								<% end %>
						</select>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-action disable-on-click" onclick="saveForm($(this).closest('form'), null, function(){timeoutReload(null, 0);})">Save & Close</button>
			</div>
		</div>
	</div>
	<% end %>
</div>

<script type="text/javascript">
	var institutution_modal_vue;
	$( document ).ready(function() {
		booklet_booklist_vue = new Vue({
			el: "#add-booklet-booklist-modal",
			name: "add-booklet-booklist-modal",
			mounted(){
				new TomSelect("#booklet_booklist_<%= parent.class == Booklet ? "booklist" : "booklet" %>_id",ts_sort_text_asc_max_1);
			},
		});
	});
</script>
