<div class="form-group mb-2">
  <input type="text" id="filter-text-box" placeholder="Filter grid" oninput="onFilterTextBoxChanged()" name="filter">
</div>
<div id="locations_grid" class="ag-theme-alpine" style="height: 75vh; width:100%;"></div>

<% locations.each do |location| %>
<%= button_to "Delete", location_path(location), method: :delete, class: "d-none", id: 'delete_'+location.id.to_s %>
<% end %>

<script type="text/javascript" charset="utf-8">

  const defaultColDef = {editable: true , sortable: true, filter: true,  resizable: true, flex: 1};

  const columnDefs = [
    { headerName: "Diocese", field: "diocese_orig" },
    { headerName: "Diocese translation", field: "diocese_english", hide: true},
    { headerName: "Diocese transliteration", field: "diocese_transliteration", hide: true},
    
    { headerName: "City", field: "city_orig" },
    { headerName: "City translation", hide: true, field: "city_english"},
    { headerName: "City translilteration", hide: true, field: "city_translilteration"},
    
    { headerName: "Region", field: "region_orig"},
    { headerName: "Region translation", field: "region_english", hide: true},
    { headerName: "Region transliteration", field: "region_transliteration", hide: true},
    
    { headerName: "Country", field: "country"},

    { headerName: "Longitude", field: "longitude", hide: true},
    { headerName: "Latitude", field: "latitude", hide: true},

    { headerName: "Links", field: "links", editable: false, suppressColumnsToolPanel: true, cellRenderer: function(links) {
      return "<!-- <a href='" + links.value.edit + "' class='btn btn-outline-secondary btn-sm'>edit</a> --><a href='#' onclick='if(confirm(\"Are you sure you want to delete this object? Note: the object will be unlinked from all parent records.\")){$("+'"#'+links.value.delete_btn+'"'+").click()}' class='btn btn-outline-danger btn-sm'>delete</a>"
    } 
  }
  ];

  const rowData = [
  <% locations.each do |location| %>
  { id:<%= location.id %>,
    country: "<%= location.country %>",city_english: "<%= location.city_english %>",city_orig: "<%= location.city_orig %>",city_translilteration: "<%= location.city_translilteration %>",region_english: "<%= location.region_english %>",region_orig: "<%= location.region_orig %>",region_transliteration: "<%= location.region_transliteration %>",diocese_english: "<%= location.diocese_english %>",diocese_orig: "<%= location.diocese_orig %>",diocese_transliteration: "<%= location.diocese_transliteration %>",longitude: "<%= location.longitude %>",latitude: "<%= location.latitude %>",
    links: { show: "<%= location_path(location) %>", edit: "<%= edit_location_path(location) %>", delete_btn: 'delete_<%= location.id %>'}
  },
  <% end %>
  ];

  const gridOptions = {
    columnDefs: columnDefs,
    defaultColDef: defaultColDef,
    rowData: rowData,
    onCellValueChanged: onCellValueChanged,
    sideBar: 'columns',
  };

  function onCellValueChanged(event){
    console.log('cell value changed ', event);
    saveChange(event.data.id, event.data);
  }

  function onFilterTextBoxChanged() {
    gridOptions.api.setQuickFilter(
      document.getElementById('filter-text-box').value
    );
  }

  function saveChange(id, data){
    var my_data = {};
    my_data.in_grid = "1";
    my_data.authenticity_token = "<%= form_authenticity_token %>";
    my_data.location = data;
    console.log('my_data', my_data);
    $.ajax({
      url: "/locations/"+id,
      type: 'PUT',
      data: JSON.stringify(my_data),
      contentType: 'application/json',
      success: function(data) {
        console.log('result received:');
        console.log(data);
      }
    });
  };

  const eGridDiv = document.querySelector('#locations_grid');
  new agGrid.Grid(eGridDiv, gridOptions);

</script>
