                      <% unless hide_columns.include? 'publisher' %><td class="col"><%= modern_source.publisher %></td><% end %>
                      <% unless hide_columns.include? 'publication_creation_date' %><td class="col"><%= modern_source.publication_creation_date %></td><% end %>
                      <% unless hide_columns.include? 'shelfmark' %><td class="col"><%= modern_source.shelfmark %></td><% end %>
                      <% unless hide_columns.include? 'ISBN' %><td class="col"><%= modern_source.ISBN %></td><% end %>
                      <% unless hide_columns.include? 'DOI' %><td class="col"><%= modern_source.DOI %></td><% end %>
                  	<td class="col-3">
        		<% unless hide_buttons.include? 'open' %><%= link_to "Open", modern_source, class: "btn btn-outline-primary me-2" %><% end %>
        		<% unless hide_buttons.include? 'edit' %><%= link_to "Edit", edit_modern_source_path(modern_source), class: "btn btn-outline-primary me-2" %><% end %>
        	</td>
        </tr>
        <% end %>
      </tbody>
      <caption>No.of Rows : <span id="rowcount"></span></caption>
    </table>
  </div>
</div>
