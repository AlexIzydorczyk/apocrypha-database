                      <% unless hide_columns.include? 'part_title_orig' %><td class="col"><%= modern_source.part_title_orig %></td><% end %>
                      <% unless hide_columns.include? 'part_title_transliteration' %><td class="col"><%= modern_source.part_title_transliteration %></td><% end %>
                      <% unless hide_columns.include? 'part_title_translation' %><td class="col"><%= modern_source.part_title_translation %></td><% end %>
                      <% unless hide_columns.include? 'series_no' %><td class="col"><%= modern_source.series_no %></td><% end %>
