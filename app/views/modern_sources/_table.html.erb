                      <% unless hide_columns.include? 'title_translation' %><th class="col"><input type="text" class="form-control" placeholder="Title translation" disabled></th><% end %>
                      <% unless hide_columns.include? 'source_type' %><th class="col"><input type="text" class="form-control" placeholder="Source type" disabled></th><% end %>
                      <% unless hide_columns.include? 'num_volumes' %><th class="col"><input type="text" class="form-control" placeholder="Num volumes" disabled></th><% end %>
                      <% unless hide_columns.include? 'volume_no' %><th class="col"><input type="text" class="form-control" placeholder="Volume no" disabled></th><% end %>
