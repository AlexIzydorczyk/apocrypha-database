                      <% unless hide_columns.include? 'num_volumes' %><td class="col"><%= modern_source.num_volumes %></td><% end %>
                      <% unless hide_columns.include? 'volume_no' %><td class="col"><%= modern_source.volume_no %></td><% end %>
                      <% unless hide_columns.include? 'volume_title_orig' %><td class="col"><%= modern_source.volume_title_orig %></td><% end %>
