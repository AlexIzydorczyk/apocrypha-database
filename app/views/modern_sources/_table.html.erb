                      <% unless hide_columns.include? 'series_title_orig' %><th class="col"><input type="text" class="form-control" placeholder="Series title orig" disabled></th><% end %>
                      <% unless hide_columns.include? 'series_title_transliteration' %><th class="col"><input type="text" class="form-control" placeholder="Series title transliteration" disabled></th><% end %>
                      <% unless hide_columns.include? 'series_title_translation' %><th class="col"><input type="text" class="form-control" placeholder="Series title translation" disabled></th><% end %>
                      <% unless hide_columns.include? 'edition' %><th class="col"><input type="text" class="form-control" placeholder="Edition" disabled></th><% end %>
                      <% unless hide_columns.include? 'publication_location_id' %><th class="col"><input type="text" class="form-control" placeholder="Publication location" disabled></th><% end %>
                      <% unless hide_columns.include? 'publisher' %><th class="col"><input type="text" class="form-control" placeholder="Publisher" disabled></th><% end %>
                      <% unless hide_columns.include? 'publication_creation_date' %><th class="col"><input type="text" class="form-control" placeholder="Publication creation date" disabled></th><% end %>
                      <% unless hide_columns.include? 'shelfmark' %><th class="col"><input type="text" class="form-control" placeholder="Shelfmark" disabled></th><% end %>
                      <% unless hide_columns.include? 'ISBN' %><th class="col"><input type="text" class="form-control" placeholder="Isbn" disabled></th><% end %>
                      <% unless hide_columns.include? 'DOI' %><th class="col"><input type="text" class="form-control" placeholder="Doi" disabled></th><% end %>
                    <% unless hide_buttons.count == 2 %><th class="col-3">Actions</th><% end %>
        </tr>
      </thead>
      <tbody>
        <% modern_sources.each do |modern_source| %>
      	<tr>
          <% unless hide_columns.include? 'id' %><td class="col"><%= modern_source.id %></td><% end -%>
                      <% unless hide_columns.include? 'publication_title_orig' %><td class="col"><%= modern_source.publication_title_orig %></td><% end %>
