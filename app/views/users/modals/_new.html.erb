<div class="modal" id="new-user" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				Create new user account
			</div>
			<div class="modal-body">
				<div class="row">
					<%= form_with(model: User.new, id: 'new-user-form') do |form| %>
						<div class="form-group col-md-12 mb-2">
							<%= form.label :email, "E-mail", style: "display: block;" %>
							<%= form.text_field :email, class: "form-control" %>
						</div>
					<% end %>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-action" onclick="$('#new-user-form').submit()">Save & Close</button>
			</div>
		</div>
	</div>	
</div>

