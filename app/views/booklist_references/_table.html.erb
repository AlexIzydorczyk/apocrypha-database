<div class="row">
  <div class="filterable">
    <div class="panel-heading text-end">
      <button class="btn btn-outline-secondary btn-sm btn-filter"><i class="far fa-filter"></i> Filter</button>
    </div>
    <table class="table table-striped">
      <thead>
        <tr class="filters">
          <% unless hide_columns.include? 'id' %><th class="col"><input type="text" class="form-control" placeholder="Id" disabled></th><% end %>
                      <% unless hide_columns.include? 'booklist_id' %><th class="col"><input type="text" class="form-control" placeholder="Booklist" disabled></th><% end %>
                      <% unless hide_columns.include? 'text_id' %><th class="col"><input type="text" class="form-control" placeholder="Text" disabled></th><% end %>
                      <% unless hide_columns.include? 'relevant_text_booklist_orig' %><th class="col"><input type="text" class="form-control" placeholder="Relevant text booklist orig" disabled></th><% end %>
                      <% unless hide_columns.include? 'relevant_text_booklist_orig_transliteration' %><th class="col"><input type="text" class="form-control" placeholder="Relevant text booklist orig transliteration" disabled></th><% end %>
                      <% unless hide_columns.include? 'relevant_text_booklist_translation' %><th class="col"><input type="text" class="form-control" placeholder="Relevant text booklist translation" disabled></th><% end %>
                      <% unless hide_columns.include? 'apocryphon_id' %><th class="col"><input type="text" class="form-control" placeholder="Apocryphon" disabled></th><% end %>
                    <% unless hide_buttons.count == 2 %><th class="col-3">Actions</th><% end %>
        </tr>
      </thead>
      <tbody>
        <% booklist_references.each do |booklist_reference| %>
      	<tr>
          <% unless hide_columns.include? 'id' %><td class="col"><%= booklist_reference.id %></td><% end -%>
                      <% unless hide_columns.include? 'booklist_id' %><td class="col"><%= booklist_reference.booklist_id %></td><% end %>
                      <% unless hide_columns.include? 'text_id' %><td class="col"><%= booklist_reference.text_id %></td><% end %>
                      <% unless hide_columns.include? 'relevant_text_booklist_orig' %><td class="col"><%= booklist_reference.relevant_text_booklist_orig %></td><% end %>
                      <% unless hide_columns.include? 'relevant_text_booklist_orig_transliteration' %><td class="col"><%= booklist_reference.relevant_text_booklist_orig_transliteration %></td><% end %>
                      <% unless hide_columns.include? 'relevant_text_booklist_translation' %><td class="col"><%= booklist_reference.relevant_text_booklist_translation %></td><% end %>
                      <% unless hide_columns.include? 'apocryphon_id' %><td class="col"><%= booklist_reference.apocryphon_id %></td><% end %>
                  	<td class="col-3">
        		<% unless hide_buttons.include? 'open' %><%= link_to "Open", booklist_reference, class: "btn btn-outline-primary me-2" %><% end %>
        		<% unless hide_buttons.include? 'edit' %><%= link_to "Edit", edit_booklist_reference_path(booklist_reference), class: "btn btn-outline-primary me-2" %><% end %>
        	</td>
        </tr>
        <% end %>
      </tbody>
      <caption>No.of Rows : <span id="rowcount"></span></caption>
    </table>
  </div>
</div>
